<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragment.setting.TermsConditionFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/login_mobile_bg"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/terms_of_service_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms Of Service"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/menu_dots_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/more_dot_img"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/terms_of_service_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"
                android:layout_marginTop="10dp">

            </TextView>

            <TextView
                android:id="@+id/last_updated_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/menu_dots_imv"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Last update:"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="25dp">

            </TextView>

            <TextView
                android:id="@+id/last_updated_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/menu_dots_imv"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/last_updated_tv"
                android:text="08-03-2021"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="25dp">

            </TextView>

            <TextView
                android:id="@+id/terms_of_service_read_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/last_updated_date_tv"
                android:text="@string/terms_of_service_read"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:id="@+id/conitions_of_use_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/terms_of_service_read_tv"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="1.Conditions of Use"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="25dp">

            </TextView>

            <TextView
                android:id="@+id/conitions_of_use_read_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/conitions_of_use_tv"
                android:text="@string/condition_read_tv"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:id="@+id/privacy_policy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/conitions_of_use_read_tv"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="2.Privacy Policy"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="25dp">

            </TextView>


            <TextView
                android:id="@+id/privacy_policy_read_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/privacy_policy_tv"
                android:text="@string/privacy_policy_read"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:id="@+id/copy_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/privacy_policy_read_tv"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="3.Copyright"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="25dp">

            </TextView>


            <TextView
                android:id="@+id/copyright_read_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/copy_right_tv"
                android:text="@string/copy_right_read"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="100dp">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:text="Decline"
        android:textColor="@color/white"
        android:background="@color/blue">

    </Button>

    <Button
        android:id="@+id/terms_and_conditions_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decline_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Terms of Service"

        android:background="@color/orange">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>